{
    "extends": "../config/base.tsconfig.json",
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "output"
    ],
    "compilerOptions": {
        "types": [
            "vite/client"
        ],
        "declaration": true,
        "declarationDir": "dist/types",
        "skipLibCheck": true,
        "lib": ["ES2020", "DOM"],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
    }
}
